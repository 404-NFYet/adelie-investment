{
  "uid": "cadvisor",
  "title": "컨테이너 모니터링 (cAdvisor)",
  "editable": true,
  "timezone": "Asia/Seoul",
  "schemaVersion": 39,
  "graphTooltip": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(container_cpu_usage_seconds_total, instance)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "refresh": 2,
        "sort": 1,
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        }
      },
      {
        "name": "container",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(container_cpu_usage_seconds_total{instance=~\"$instance\", name!=\"\"}, name)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "refresh": 2,
        "sort": 1,
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "컨테이너 목록",
      "collapsed": true,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "panels": [
        {
          "id": 2,
          "type": "stat",
          "title": "Running Containers",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "gridPos": { "h": 8, "w": 6, "x": 0, "y": 1 },
          "targets": [
            {
              "refId": "A",
              "expr": "count(container_last_seen{instance=~\"$instance\", name=~\"$container\", name!=\"\"})",
              "legendFormat": "",
              "instant": true,
              "range": false
            }
          ],
          "fieldConfig": {
            "defaults": {
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  {
                    "color": "green",
                    "value": null
                  }
                ]
              }
            },
            "overrides": []
          },
          "options": {
            "reduceOptions": {
              "calcs": ["lastNotNull"],
              "fields": "",
              "values": false
            },
            "colorMode": "value",
            "graphMode": "none",
            "justifyMode": "auto",
            "textMode": "auto"
          }
        },
        {
          "id": 3,
          "type": "table",
          "title": "Container Status Table",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "gridPos": { "h": 8, "w": 18, "x": 6, "y": 1 },
          "targets": [
            {
              "refId": "A",
              "expr": "container_last_seen{instance=~\"$instance\", name=~\"$container\", name!=\"\"}",
              "legendFormat": "",
              "instant": true,
              "range": false,
              "format": "table"
            }
          ],
          "transformations": [
            {
              "id": "organize",
              "options": {
                "excludeByName": {
                  "Time": false,
                  "__name__": true,
                  "job": true,
                  "id": true,
                  "image": true,
                  "container_label_com_docker_compose_project": true,
                  "container_label_com_docker_compose_service": true,
                  "container_label_com_docker_compose_config_hash": true,
                  "container_label_com_docker_compose_container_number": true,
                  "container_label_com_docker_compose_version": true,
                  "container_label_com_docker_compose_oneoff": true,
                  "container_label_maintainer": true
                },
                "indexByName": {
                  "name": 0,
                  "instance": 1,
                  "Value": 2
                },
                "renameByName": {
                  "Value": "Last Seen"
                },
                "includeByName": {}
              }
            }
          ],
          "fieldConfig": {
            "defaults": {},
            "overrides": [
              {
                "matcher": {
                  "id": "byName",
                  "options": "Last Seen"
                },
                "properties": [
                  {
                    "id": "unit",
                    "value": "dateTimeFromNow"
                  }
                ]
              }
            ]
          },
          "options": {
            "showHeader": true,
            "sortBy": []
          }
        }
      ]
    },
    {
      "id": 4,
      "type": "row",
      "title": "CPU",
      "collapsed": true,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "panels": [
        {
          "id": 5,
          "type": "timeseries",
          "title": "Container CPU Usage %",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "gridPos": { "h": 8, "w": 24, "x": 0, "y": 10 },
          "targets": [
            {
              "refId": "A",
              "expr": "rate(container_cpu_usage_seconds_total{instance=~\"$instance\", name=~\"$container\", name!=\"\"}[5m]) * 100",
              "legendFormat": "{{name}}"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "min": 0,
              "custom": {
                "lineWidth": 2,
                "fillOpacity": 10,
                "spanNulls": false,
                "drawStyle": "line",
                "lineInterpolation": "linear",
                "showPoints": "auto",
                "pointSize": 5,
                "stacking": {
                  "mode": "none",
                  "group": "A"
                },
                "axisPlacement": "auto",
                "axisBorderShow": false,
                "scaleDistribution": {
                  "type": "linear"
                }
              }
            },
            "overrides": []
          },
          "options": {
            "tooltip": {
              "mode": "multi",
              "sort": "desc"
            },
            "legend": {
              "displayMode": "list",
              "placement": "bottom",
              "calcs": []
            }
          }
        }
      ]
    },
    {
      "id": 6,
      "type": "row",
      "title": "메모리",
      "collapsed": true,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "panels": [
