          "fieldConfig": {
            "defaults": {
              "unit": "bytes",
              "custom": {
                "lineWidth": 1,
                "fillOpacity": 10,
                "spanNulls": false,
                "drawStyle": "line",
                "lineInterpolation": "linear",
                "showPoints": "auto",
