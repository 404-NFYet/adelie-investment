        {
          "id": 9,
          "type": "bargauge",
          "title": "Memory Usage Bar Gauge",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "gridPos": { "h": 6, "w": 24, "x": 0, "y": 27 },
          "targets": [
            {
              "refId": "A",
              "expr": "container_memory_usage_bytes{instance=~\"$instance\", name=~\"$container\", name!=\"\"}",
              "legendFormat": "{{name}}",
              "instant": true,
              "range": false
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "bytes",
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "yellow", "value": 536870912 },
                  { "color": "red", "value": 1073741824 }
                ]
              }
            },
            "overrides": []
          },
          "options": {
            "orientation": "horizontal",
            "displayMode": "gradient",
            "reduceOptions": {
              "calcs": ["lastNotNull"],
              "fields": "",
